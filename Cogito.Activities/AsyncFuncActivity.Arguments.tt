    /// </summary>
    public class AsyncFuncActivity<<#= Repeat("TArg{0}", i, ", ") #>, TResult> :
        AsyncNativeActivity<TResult>
    {

        Func<NativeActivityContext, <#= Repeat("TArg{0}", i, ", ") #>, Task<TResult>> func;

        /// <summary>
