        /// </summary>
        /// <param name="func"></param>
        public AsyncFuncActivity(Func<NativeActivityContext, <#= Repeat("TArg{0}", i, ", ") #>, Task<TResult>> func)
            : this()
        {
            Contract.Requires<ArgumentNullException>(func != null);

            this.func = func;
        }

        /// <summary>
        /// Gets or sets the action to be invoked.
        /// </summary>
        public Func<NativeActivityContext, <#= Repeat("TArg{0}", i, ", ") #>, Task<TResult>> Func
        {
            get { return func; }
            set { func = value; }
        }

<#
for (int j = 1; j <= i; j++)
{
#>
        /// <summary>
