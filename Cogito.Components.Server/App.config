<?xml version="1.0" encoding="utf-8"?>

<configuration>

    <configSections>
        <section
            name="cogito.components.server"
            type="Cogito.Components.Server.ConfigurationSection, Cogito.Components.Server" />
    </configSections>

    <startup>
        <supportedRuntime
            version="v4.0"
            sku=".NETFramework,Version=v4.5.2"/>
    </startup>

    <system.diagnostics>
        <trace
            autoflush="true">
            <listeners>
                <add
                    name="ConsoleTraceListener"
                    type="System.Diagnostics.ConsoleTraceListener"/>
                <add
                    name="RollingFileTraceListener"
                    type="Cogito.Diagnostics.RollingFileTraceListener, Cogito.Core"
                    initializeData="log\ISIS.Service.log"/>
            </listeners>
        </trace>
    </system.diagnostics>

    <runtime>
        <loadFromRemoteSources
            enabled="true"/>
    </runtime>

</configuration>
